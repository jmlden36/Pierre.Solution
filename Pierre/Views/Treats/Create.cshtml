@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")
    
    <input type="submit" value="Add new treat if you dare!" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all treats", "Index")</p>